{% extends 'base.html.twig' %}

{% block mainTitle %}{{ post.title }}{% endblock %}
{% block content %}
        <div class="the-post">
            <p class="post-content">{{ post.content }}</p>
        </div>

    <div class="all-comments">
        {% for comment in comments %}
            <div class="one-comment">
                <p>De {{ comment.author.name }} {{ comment.author.lastname }}, le {{ comment.createdAt|date('d-m-Y') }} Ã  {{ comment.createdAt|date('H:i') }}</p>
                <p>{{ comment.content }}</p>
            </div>
        {% endfor %}
    </div>

{% endblock %}

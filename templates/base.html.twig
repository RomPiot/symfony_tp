<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="/style.css">
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
		{% block body %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="{{ path('post') }}">Accueil</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    {% if is_granted('ROLE_AUTHOR') %}
                        <a class="nav-item nav-link" href="{{ path('post_add') }}">Ajouter Post</a>
                    {% endif %}
                    {% if not is_granted('ROLE_USER') %}
                        <a class="nav-item nav-link" href="{{ path('login') }}">Login</a>
                    {% endif %}
                </div>
            </div>
        </nav>
        <div class="title">
            <h1>{% block mainTitle %}BLOG{% endblock %}</h1>
        </div>
        <div class="full-content">
            <div class="main-content">
                {% block content %}Aucun r√©sultat.{% endblock %}
            </div>
            <aside class="sidebar">
                <div class="user-connected">
                    <div class="logo">{% block logo %}Logo{% endblock %}</div>
                    <p class="username">{% block username %}Username{% endblock %}</p>
                </div>
            </aside>
        </div>
		{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
